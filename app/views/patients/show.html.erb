<p id="notice"><%= notice %></p>

<p>
  <strong>Firstname:</strong>
  <%= @patient.firstName %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @patient.lastName %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @patient.sex %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>

<p>
  <strong>Address:</strong>
  <%= @patient.address %>
</p>
<h2>Reports</h2>
<table class="table">
  <thead>
    <tr>
      <th>Symp</th>
      <th>Analysis</th>
      <th>Prescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @patient.reports.each do | report| %>
  <tr>
        <td><%= report.symp %></td>
        <td><%= report.analysis %></td>
        <td><%= report.presc %></td>
        
      </tr>
<% end %>
</tbody>
</table>


<h2>Add a report:</h2>
<%= form_for([@patient, @patient.reports.build]) do |form| %>
   <div class="field form-group">
    <%= form.label :symp, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
    <%= form.text_area :symp, id: :report_symp %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :analysis, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
    <%= form.text_area :analysis, id: :report_analysis %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :presc, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
    <%= form.text_area :presc, id: :report_presc %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', patients_path %>
